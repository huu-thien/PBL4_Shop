@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var culture = CultureInfo.CurrentCulture.Name;
}
@section scripts{
    <script src="~/js/cart.js"></script>
    <script>
        var cartController = new CartController();
        cartController.initialize();
    </script>
}
<style>
    tr {
        color: #003366;
        font-size: 16px;
    }
    td {
        font-size : 15px;
    }
    /*.btn-remove {
        border: none;
        background-color: #f40177 !important;
        color: #fff;
        padding: 5px 12px;
    }*/
    .label-important {
        background-color: #f40177 !important;
    }
    table {
        text-align: center;
    }
</style>
<ul class="breadcrumb">
    <li><a href="index.html">Home</a> <span class="divider">/</span></li>
    <li class="active"> SHOPPING CART</li>
</ul>

<h3>
    SHOPPING CART [ <small><span id="lbl_number_of_items">0</span> Item(s) </small>]
    <a href="/" class="btn btn-large pull-right"><i class="icon-arrow-left"></i> Continue Shopping </a>
</h3>

<hr class="soft" />
<table class="table table-bordered" id="tbl_cart">
    <thead>
        <tr>
            <th>Sản phẩm</th>
            <th>Mô tả</th>
            <th>Số lượng</th>
            <th>Giá</th>
            <th>Tổng</th>
        </tr>
    </thead>
    <tbody id="cart_body">
    </tbody>
    <tfoot>
        <tr>
            <td colspan="4" style="text-align:right"><strong>TOTAL =</strong></td>
            <td class="label label-important" style="display:block"><strong> <span id="lbl_total"></span> </strong></td>
        </tr>
    </tfoot>
</table>

<a href="/" class="btn btn-large"><i class="icon-arrow-left"></i> Trở về </a>
<a href="/@culture/Cart/Checkout" class="btn btn-large pull-right">Đặt hàng <i class="icon-arrow-right"></i></a>