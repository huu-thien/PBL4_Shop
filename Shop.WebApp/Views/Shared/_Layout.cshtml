            background-color: #003366;
            display: flex;
            justify-content: space-evenly;
        }

        .header__navbar-search {
            display: flex;
            padding-left: 48px;
            align-items: center;
            margin-top: 5px;
        }

        .header__navbar-logo {
            margin-left: 110px;
            padding: 10px;
            background: rgba(0,0,0,.04);
            border-radius: 50px;    
        }
        .header__navbar-logo:hover {
          background-color: var(--hover-text-color);
        }
        .header__navbar-logo-link {
            color: transparent;
            text-decoration: none;
            display: block;
            line-height: 0;
        }
        .header__search {  
            background-color: #fff;
            height: 48px;
            border-radius: 5px;
            display: flex;
            align-items: center;
            min-width: 470px;
            margin: 0 0 0 20px;
            box-shadow: 1px 1px 4px rgb(0 0 0 / 20%);
        }
        .header___menu {
            padding-left: 25px;
            display: none;
            cursor: pointer;
        }
         .header___menu:checked ~ .overlay {
            display: block;
        } 
        .overlay {
            display: none;
            position: fixed;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
            transition: all linear.25s;
            background-color: rgba(0,0,0,.3);
        }

        .header___menu--icon {
            font-size: 3rem;
            color: #555;
        }
        .nav-link {
            text-transform: uppercase;
            display: block;
            text-decoration: none;
            font-size: 1.5rem;
            padding: 12px 0;
            padding-left: 40px;
            color: #fff;
        }
        .nav-link:hover {
            background-color: #fff;
            color: #f5945c;
        }

        .nav-input {
            display: none;
        }
        .nav-input:checked ~ .overlay {
            display: block;
        }
        .nav-input:checked ~ .nav__mobile {
            transform: translateX(0);
        }

        .header__search-input-wrap {
            display: flex;
            justify-content: space-between;
            align-items: center;
            line-height: 40px;
        }

        .header__search-input-wrap-box {
            display: flex;
            align-items: center;
            justify-content: space-evenly;
        }
        .header__search-icon {
            font-size: 1.6rem;
            text-decoration: none;
            padding-left: 16px;
            color: #9a9a9a;
        }


        .header__search-input {
            padding: 10px 20px !important;
            border-color: transparent;
            outline: none;
            line-height: 1.4rem;
            min-width: 260px;
            font-size: 15px !important;
            color: #000;
            margin: 0 !important;
            width: 400px !important;
            border: none !important;
        }
        .header__search-input:focus {
            border-color: none !important;
            outline: 0 !important;
            -webkit-box-shadow: none !important;
            -moz-box-shadow: none !important;
            box-shadow: none !important;
        }
        .header__search-btn {
            margin-left: 20px;
            background-color: #fff;
            border: none;
            text-align: center;
             width: 54px;
             height: 47px;
             border-radius: 5px;
             cursor: pointer;
        }
        .header__search-btn i {
            font-size: 25px;
            font-weight: 500;
        }
        .header__search-btn-icon {
            font-size: 1.3rem;
            color: var(--white-color);
        }

        .header__navbar-list {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 400px;
            list-style: none;
            margin-right: 45px;
            padding-left: 0;
            margin-top: 16px;
