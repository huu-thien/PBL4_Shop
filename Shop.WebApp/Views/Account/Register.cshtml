@model Shop_ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
	.btn-register {
		background-color: #003366 !important;
        display: inline-block;
        padding: 6px 20px;
        font-size: 15px;
        line-height: 20px;
        color: #fff;
        text-align: center;
        text-shadow: 0 1px 1px rgb(255 255 255 / 75%);
        vertical-align: middle;
        cursor: pointer;
        border: 1px solid #bbb;
        border-radius: 8px;
        text-decoration: none;
		letter-spacing: 1px;
    }
    .btn-register:hover a{
        background-color: #f7285a !important;
		text-decoration: none !important;
    }
	.control-label {
		font-size: 16px;
		color: #111;
	}
	input[type="text"], input[type="password"], input[type="email"] {
		padding: 6px 12px;
		font-size: 15px;
	}
</style>
<ul class="breadcrumb">
	<li><a href="index.html">Home</a> <span class="divider">/</span></li>
	<li class="active">Register</li>
</ul>
<h2> REGISTER</h2>	
<div class="well">
<form asp-action="Register" asp-controller="Account" method="post" class="form-horizontal" >
	<h3 style="text-transform: uppercase; color:#003366;">Your personal information</h3>
	<div class="control-group">
		<label class="control-label" for="FirstName">Tên<sup>*</sup></label>
		<div class="controls">
		  <input type="text" asp-for="FirstName" placeholder="" class="input">
		  <span asp-validation-for="FirstName" class="text-error"></span>
		</div>
	 </div>
	 <div class="control-group">
		<label class="control-label" for="LastName">Họ<sup>*</sup></label>
		<div class="controls">
		  <input type="text"asp-for="LastName" placeholder="" class="input">
		  <span asp-validation-for="LastName" class="text-error"></span>
		</div>
	 </div>
	 <div class="form-group" style="padding-bottom:20px;">
        <label asp-for="Dob" class="control-label" style="padding-bottom:8px;"></label>
		<div class="controls">
           <input asp-for="Dob" class="form-control" style="padding: 6px 12px;font-size: 15px;"/>
           <span asp-validation-for="Dob" class="text-error"></span>
		</div>
     </div> 
  <div class="control-group">
	<label class="control-label" for="Email">Địa chỉ Email <sup>*</sup></label>
	<div class="controls">
	  <input type="text" asp-for="Email" placeholder="" class="input">
	  <span asp-validation-for="Email" class="text-error"></span>
	</div>
  </div>
  <div class="control-group">
	<label class="control-label" for="PhoneNumber">Số điện thoại<sup>*</sup></label>
	<div class="controls">
	  <input type="text" asp-for="PhoneNumber" placeholder="" class="input">
	  <span asp-validation-for="PhoneNumber" class="text-error"></span>
	</div>
  </div>
  <div class="control-group">
	<label class="control-label" for="UserName">Tên đăng nhập<sup>*</sup></label>
	<div class="controls">
	  <input type="text" asp-for="UserName" placeholder="" class="input">
	  <span asp-validation-for="UserName" class="text-error"></span>
	</div>
	</div>
  <div class="control-group">
	<label class="control-label" for="Password">Mật khẩu<sup>*</sup></label>
	<div class="controls">
	  <input type="password" asp-for="Password" placeholder="" class="input">
	  <span asp-validation-for="Password" class="text-error"></span>
	</div>
	</div>
	 <div class="control-group">
	<label class="control-label" for="ConfirmPassword">Nhập lại mật khẩu<sup>*</sup></label>
	<div class="controls">
	  <input type="password" asp-for="ConfirmPassword" placeholder="" class="input">
	  <span asp-validation-for="ConfirmPassword" class="text-error"></span>
	</div>
	</div>
<p><sup>*</sup>Required field</p>
<div class="control-group">
		<div class="controls">
			<input type="hidden" name="email_create" value="1">
			<input type="hidden" name="is_new_customer" value="1">
			<input class="btn-register" type="submit" value="Register" />
		</div>
	</div>		
</form>
</div>>