@using Shop_ViewModels.Common;
@model PagedResult<Shop_ViewModels.System.Users.UserVm>

@{
    ViewData["Title"] = "Danh sách người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}
<style>
    .btn {
        margin: 0 4px;
    }
    .btn a {
        text-decoration: none;
        color: #fff;
    }
</style>
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách người dùng </h1>
    @*<ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách người dùng</li>
    </ol>*@
    <div class="card mb-12">
    </div>
    <div class="card mb-12">      
        <div class="card-header">
           @* <a class="btn btn-success" style="background-color:#2f2870;" asp-action="Create"  asp-controller="User">Thêm mới người dùng</a>*@
           <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" style="background-color:#2f2870;" asp-action="Create" asp-controller="User">Thêm mới người dùng</a>
                </div>
                <div class="col-md-6 col-xs-12">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-9">
                                <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" placeholder="Tìm kiếm theo Tên tài khoản và Số điện thoại"/>
                            </div>
                            <div class="cold-md-6" style="padding-top:10px;">
                                <button type="submit" class="btn btn-success">Tìm</button>
                                <button type="button" onclick="window.location.href='/User/Index'" class="btn btn-dark">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
             <div class="row">
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" style="text-align: center;">
                <thead>
                    <tr>
                        @*<th>
                            Id
                        </th>*@
                        <th>
                            Tên
                        </th>
                        <th>
                            Họ
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Tài khoản
                        </th>
                        <th>
                            Email
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.FirstName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <button class="btn btn-info">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </button>
                                <button class="btn btn-success">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) 
                                <button class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </button>    
                                @*<button class="btn btn-secondary">
                                    @Html.ActionLink("Role Assign", "RoleAssign", new { id = item.Id })
                                </button>*@         
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>
