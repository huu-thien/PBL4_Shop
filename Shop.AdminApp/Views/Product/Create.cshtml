@model Shop_ViewModels.Catalog.Products.ProductCreateRequest
@{
    ViewData["Title"] = "Tạo mới sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="mt-4">Thêm sản phẩm</h1>
    @*<ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Thêm sản phẩm</li>
    </ol>*@
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Product" style="background-color: #2f2870;">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group" style="padding-bottom:20px;"> 
                        <label asp-for="Name" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="Price" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="Price" type="text" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="OriginalPrice" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="OriginalPrice" type="text" class="form-control" />
                        <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="Stock" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="Stock" type="text" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="Description" class="control-label" style="padding-bottom:8px;"></label>
                        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="Details" class="control-label" style="padding-bottom:8px;"></label>
                        <textarea asp-for="Details" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="SeoDescription" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="SeoDescription" class="form-control" />
                        <span asp-validation-for="SeoDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="SeoTitle" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="SeoTitle" class="form-control" />
                        <span asp-validation-for="SeoTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="SeoAlias" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="SeoAlias" class="form-control" />
                        <span asp-validation-for="SeoAlias" class="text-danger"></span>
                    </div>
                    <div class="form-group" style="padding-bottom:20px;">
                        <label asp-for="ThumbnailImage" class="control-label" style="padding-bottom:8px;"></label>
                        <input asp-for="ThumbnailImage" type="file" class="form-control" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Thêm sản phẩm" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

