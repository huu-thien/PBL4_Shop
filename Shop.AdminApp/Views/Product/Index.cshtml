@using Shop_ViewModels.Common;
@model PagedResult<Shop_ViewModels.Catalog.Products.ProductVm>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Scripts{
    <script>
        setTimeout(function () {
            $('#msgAlert').fadeOut('slow');
        }, 2000);
    </script>
}
<style>
    .btn {
        margin: 0 4px;
    }
    .btn a {
        text-decoration: none;
        color: #fff;
    }
</style>
<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách sản phẩm </h1>
    @*<ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách sản phẩm</li>
    </ol>*@
    <div class="card mb-12">
    </div>
    <div class="card mb-12">      
        <div class="card-header">
           @* <a class="btn btn-success" style="background-color:#2f2870;" asp-action="Create"  asp-controller="User">Thêm mới người dùng</a>*@
           <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" style="background-color:#2f2870;" asp-action="Create" asp-controller="Product">Thêm mới sản phẩm</a>
                </div>
                <div class="col-md-6 col-xs-12">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-8">
                                <input type="text" value="@ViewBag.Keyword" name="keyword" class="form-control" placeholder="Tìm kiếm theo Tên SP"/>
                            </div>
                            <div class="col-md-4">
                                <select name="categoryId" onchange="this.form.submit()" asp-items="@ViewBag.Categories" class="form-control">
                                    <option>--Chọn danh mục--</option>
                                </select>
                            </div>
                            <div class="cold-md-6" style="padding-top:10px;">
                                <button type="submit" class="btn btn-success">Tìm</button>
                                <button type="button" onclick="window.location.href='/Product/Index'" class="btn btn-dark">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
             <div class="row">
                @if (ViewBag.SuccessMsg != null)
                {
                    <div id="msgAlert" class="alert alert-success" role="alert">
                        @ViewBag.SuccessMsg
                    </div>
                }
            </div>
            <div class="table-responsive">
                <table class="table table-bordered" style="text-align: center;">
                <thead>
                    <tr>
                        <th>
                                Mã SP
                        </th>
                        <th>
                                Tên sản phẩm
                        </th>
                        
                        <th>
                                Giá bán
                        </th>
                        <th>
                                Trong kho
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                <button class="btn btn-success">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </button>
                                <button class="btn btn-danger">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </button>    
                                <button class="btn btn-secondary">
                                    @Html.ActionLink("Gán danh mục", "CategoryAssign", new { id = item.Id })
                                </button>         
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>
